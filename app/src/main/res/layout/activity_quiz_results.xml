<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".QuizResults">
    <ImageView
        android:id="@+id/congratulationsIcon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="50dp"
        android:adjustViewBounds="true"
        android:src="@drawable/congratulations"/>
    <TextView
        android:id="@+id/successTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:layout_below="@id/congratulationsIcon"
        android:text="Tiếp tục cố gắng ! ฅ(＾・ω・＾ฅ)"
        android:textColor="#844C3D "
        android:textStyle="bold"
        android:textSize="19sp"
        />
    <LinearLayout
        android:layout_below="@id/successTextView"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/correctAnswers"
            android:text="Số câu đúng : 0"
            android:textStyle="bold"
            android:textColor="#60B727 "/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:id="@+id/incorrectAnswers"
            android:text="Số câu sai : 0"
            android:textStyle="bold"
            android:textColor="#CC5C3E "/>


    </LinearLayout>
    <android.support.v7.widget.AppCompatButton
        android:id="@+id/startnewQuizBtn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Làm tiếp"
        android:textColor="#FFFFFF"
        android:background="@drawable/round_back_green20"
        android:layout_alignParentBottom="true"
        android:layout_margin="100dp"
        />



</RelativeLayout>